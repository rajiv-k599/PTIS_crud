@{
}
@model SimpleCrud.ViewModel.AdminVM
<section class="mb-5 mt-5 gradient-custom">
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body">
                        <h3 class="text-center">Registration Form</h3>
                        <form method="post" asp-controller="Admin" asp-action="RegisterInfo">
                            <h3 class="text-danger">@TempData["ErrorMessage"]</h3>
                            <div class="row">
                                <div class="col-md ">

                                    <div class="form-outline">
                                        <span asp-validation-for="AdminName" class="text-danger"></span>
                                        <input type="text" id="firstName" class="form-control form-control" name="AdminName"/>
                                       
                                        <label class="form-label" for="firstName">Name</label>
                                    </div>
                            </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 ">

                                    <h6 class="mb-2">Gender: </h6>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="femaleGender"
                                               value="Female"  checked />
                                        <label class="form-check-label" for="femaleGender">Female</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="maleGender"
                                               value="Male" />
                                        <label class="form-check-label" for="maleGender">Male</label>
                                    </div>

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Gender" id="otherGender"
                                               value="others" />
                                        <label class="form-check-label" for="otherGender">Other</label>
                                    </div>
                                   
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="form-outline">
                                        <input type="email" id="emailAddress" class="form-control" name="Email"/>
                                        
                                        <label class="form-label" for="emailAddress">Email</label>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                    <div class="form-outline">
                                        <input type="tel" id="phoneNumber" class="form-control" name="Phone" />
                                        
                                        <label class="form-label" for="phoneNumber">Phone Number</label>
                                    </div>

                                </div>
                            </div>

                            <div class="form-outline">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input type="password" id="new" class="form-control"/>
                               
                                <label class="form-label" for="form3Example4cg">Password</label>
                            </div>

                            <div class="form-outline ">
                                <div id="Error"></div>
                                <input type="password" id="confirm" class="form-control form-control" name="Password"/>
                                <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                            </div>

                            <div class="">
                                <input class="btn btn-primary" type="submit" value="Submit" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

